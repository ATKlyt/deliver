  <select id="findNearbyDriverOrder" resultMap="DriverOrderMessageResultMap">
        SELECT
	area.*, other.driver_order_id,
	other.car_number,
	other.go_off,
	other.`NAME`,
	other.phone
FROM
	(
		SELECT
			dor.original_id,
			dor.id AS driver_order_id,
			dor.go_off,
			u.phone,
			ui. NAME,
			di.car_number
		FROM
			driver_order AS dor,
			`user` AS u,
			user_info AS ui,
            driver_info AS di
        WHERE
	        u.id = ui.uid
        AND ui.id = di.uiid
        AND u.id = dor.uid
        AND dor.`status` = 1
        AND di.order_number &lt; 5
  ) AS other,
   area
  WHERE
      area.village = #{village,jdbcType=VARCHAR}
  AND other.original_id = area.id;
</select>
  <select id="findDetailByUserOrder" resultMap="DriverOrderMessageResultMap">
    SELECT
      area.*, other.destination_id,
      other.auth_id,
      other.car_picture
    FROM
        (
            SELECT
                dor.id AS driver_order_id,
                u.auth_id,
                di.car_picture,
                dor.destination_id,
                dor.uid
            FROM
                driver_order AS dor,
                `user` AS u,
                user_info AS ui,
                driver_info AS di
            WHERE
                u.id = ui.uid
            AND ui.id = di.uiid
            AND u.id = dor.uid
            AND dor.id = #{driverOrderId,jdbcType=INTEGER}
        ) AS other,
        area
    WHERE
        (
            area.uid = other.uid
            AND area.`status` = 1
        )
    OR area.id = other.destination_id;

  </select>
